<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sos_solulutio.Views.Thankyou" Title="Feedback">
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">

        <ActivityIndicator
           
            IsRunning="False"/>

        <Grid>
            <Label FontSize="Medium" Text="Merci ...   votre demande a été traitée avec succès, veuillez patienter, l'aide est en route"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </Grid>



        <Button  x:Name="envoyer"
                     
                     Text="Termine"
                     TextColor="White"
                      CornerRadius="20"
                     HeightRequest="50"
                      Image="ic_done_all_white_36dp.png"
                     VerticalOptions="Center"
                     BackgroundColor="#4CA048"
                     
                   Clicked="Envoyer_ClickedAsync"
                    
                 />

    </StackLayout>

</ContentPage>