<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sos_solulutio.Views.panicsos" Title="Panic SOS " BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator IsRunning="True" IsVisible="False" x:Name="loader" />
            <Label IsVisible="False" x:Name="label" Text="Contacting server. Please wait..." HorizontalOptions="Center" />
            <Button  x:Name="btn2" ContentLayout="Top,0" BackgroundColor="White" Image="sos.png" 
                     HorizontalOptions="CenterAndExpand" Clicked="Btn2_ClickedAsync"
                     TextColor="Gray"  />

            <Grid x:Name="main_gride" IsVisible="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>


                <Grid Grid.Column="0" >


                    <Grid Grid.Column="0" >


                    </Grid>
                    <Grid Grid.Column="1" >


                    </Grid>
                </Grid>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>